<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backend.mapper.UserMapper">
    <!--    User findUserByEmail(String email);-->
    <!--    User findUserByEmailAndPassword(String email, String password);-->
    <!--    User findUserByUserId(int id);-->

    <select id="findUserByEmail" resultType="com.example.backend.entity.User">
        SELECT * FROM users WHERE email = #{email}
    </select>
    <select id="findUserByEmailAndPassword" resultType="com.example.backend.entity.User">
        SELECT * FROM users WHERE email = #{email} AND password = #{password}
    </select>
    <select id="findUserByUserId" resultType="com.example.backend.entity.User">
        SELECT * FROM users WHERE user_id = #{id}
    </select>
</mapper>
